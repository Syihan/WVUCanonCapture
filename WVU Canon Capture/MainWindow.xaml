                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1">
                        <StackPanel 
                            Orientation="Horizontal" 
                            Background="#2C2A29">
                            <Label 
                                Content="Camera Profile"
                                HorizontalContentAlignment="Center"
                                Width="150"
                                Foreground="#FFFFFF" />
                            <Label 
                                Content="|"
                                Foreground="#FFFFFF" 
                                Width="15"
                                HorizontalContentAlignment="Center"/>
                            <Label 
                                Content="Thumbnail"
                                HorizontalContentAlignment="Center"
                                Width="75"
                                Foreground="#FFFFFF" />
                            <Label 
                                Content="|"
                                Foreground="#FFFFFF" 
                                Width="15"
                                HorizontalContentAlignment="Center"/>
                            <Label 
                                Content="Title"
                                HorizontalContentAlignment="Center"
                                Width="100"
                                Foreground="#FFFFFF" />
                            <Label 
                                Content="|"
                                Foreground="#FFFFFF" 
                                Width="15"
                                HorizontalContentAlignment="Center"/>
                            <Label 
                                Content="Description"
                                HorizontalContentAlignment="Center"
                                Width="150"
                                Foreground="#FFFFFF" />
                            <Label 
                                Content="|"
                                Foreground="#FFFFFF" 
                                Width="15"
                                HorizontalContentAlignment="Center"/>
                            <Label 
                                Content="Filename"
                                HorizontalContentAlignment="Center"
                                Width="150"
                                Foreground="#FFFFFF" />
                        </StackPanel>
                        <ListView Margin="0, 30, 0, 0">
                        </ListView>
