<Window x:Class="WVU_Canon_Capture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WVU_Canon_Capture"
        mc:Ignorable="d"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen"
        Title="WVU Canon Capture" 
        Height="840" 
        MinHeight="840" 
        Width="1200" 
        MinWidth="1000"
        Icon="Resources/canon_capture_icon.ico">

    <!--main UI-->
    <Grid Background="#161616">


        <!--home screen-->
        <Grid 
            x:Name="HomeScreenGrid" 
            Visibility="Visible" 
            Background="#161616"
            Margin="0, 30, 0, 30">

            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="400" />
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!--live view box-->
            <Grid Grid.Column="0" VerticalAlignment="Center">
                <StackPanel Width="350">

                    <!--live view-->
                    <Grid Grid.Row="0" Height="525" Background="#000000" >
                        <Viewbox Stretch="Fill">
                            <Grid x:Name="HomeLiveViewCanvas" Height="350" Width="350" RenderTransformOrigin="0.5,0.5">
                                <Grid.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="-90"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Grid.RenderTransform>
                            </Grid>
                        </Viewbox>
                    </Grid>

                    <!--control panel-->
                    <Grid 
                        Background="#002855"
                        Height="190">

                        <!--session settings-->
                        <Grid 
                            x:Name="SessionSettingsGrid"
                            Visibility="Visible"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top">
                            <StackPanel>
                                <Label Content="Session Settings" Height="50" VerticalAlignment="Top" Foreground="#EAAA00" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                                    <!--camera selection-->
                                    <StackPanel Height="30" DockPanel.Dock="Top" Orientation="Horizontal" Margin="0, 0, 0, 5">
                                        <Label Content="Camera " Foreground="#FFFFFF" HorizontalContentAlignment="Right" Width="100" FontWeight="Bold"/>
                                        <ComboBox 
                                            x:Name="CameraComboBox" 
                                            Text="TestCamera"
                                            SelectionChanged="CameraComboBox_SelectionChanged"
                                            SelectedIndex="0"
                                            VerticalContentAlignment="Center" 
                                            HorizontalContentAlignment="Left" 
                                            Width="160" 
                                            BorderThickness="0"
                                            Cursor="Hand">
                                            
                                            <!--<ComboBoxItem Content=""/>-->
                                            <ComboBoxItem Content=""/>
                                        </ComboBox>
                                    </StackPanel>

                                    <!--collection selection-->
                                    <StackPanel 
                                        Height="30" 
                                        DockPanel.Dock="Top" 
                                        Orientation="Horizontal" 
                                        Margin="0, 0, 0, 5">
                                        <Label 
                                            Content="Collection " 
                                            Foreground="#FFFFFF" 
                                            HorizontalContentAlignment="Right" 
                                            Width="100" 
                                            FontWeight="Bold"/>
                                        <ComboBox 
                                            x:Name="CollectionComboBox" 
                                            SelectionChanged="CollectionComboBox_SelectionChanged"
                                            VerticalContentAlignment="Center" 
                                            HorizontalContentAlignment="Left" 
                                            Width="160" 
                                            BorderThickness="0" 
                                            Cursor="Hand">
                                            <ComboBoxItem Content=""/>
                                        </ComboBox>
                                    </StackPanel>

                                    <!--RID input-->
                                    <StackPanel Height="30" DockPanel.Dock="Top" Orientation="Horizontal">
                                        <Label 
                                            Content="RID__DATE__COLL " 
                                            Foreground="#FFFFFF" 
                                            HorizontalContentAlignment="Right" 
                                            Width="100" 
                                            FontWeight="Bold"/>
                                        <TextBox 
                                            x:Name="RIDTextBox" 
                                            KeyDown="RIDTextBox_KeyDown"
                                            VerticalContentAlignment="Center" 
                                            HorizontalContentAlignment="Left" 
                                            Width="130" 
                                            BorderThickness="0"/>
                                        <Button 
                                            x:Name="EnterRIDButton" 
                                            Click="EnterRIDButton_Click"  
                                            Content="&#xE09B;" 
                                            Width="30" 
                                            BorderThickness="0" 
                                            ToolTip="Enter" 
                                            Background="#9ABEAA" 
                                            FontFamily="Segoe UI Symbol"
                                            Cursor="Hand"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!--camera controls-->
                        <Grid 
                            x:Name="CameraControlsGrid"
                            Visibility="Hidden"
                            VerticalAlignment="Top">
                            <StackPanel>

                                <Label 
                                    Content="Camera Controls" 
                                    Height="40" 
                                    VerticalContentAlignment="Center"
                                    Foreground="#EAAA00" 
                                    FontWeight="Bold" 
                                    FontSize="18" 
                                    HorizontalContentAlignment="Center"/>

                                <StackPanel 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">

                                    <!--capture button-->
                                    <Button 
                                        x:Name="CaptureButton"
                                        Click="CaptureButton_Click"
                                        Content="&#xE114;" 
                                        ToolTip="Capture photo. Right click and hold to focus camera." 
                                        FontSize="50" 
                                        FontFamily="Segoe UI Symbol" 
                                        Height="90" 
                                        Width="90" 
                                        Background="#0D5257" 
                                        Foreground="#FFFFFF" 
                                        BorderThickness="0"
                                        Cursor="Hand"/>

                                    <!--open containing folder and autofocus buttons-->
                                    <StackPanel 
                                        Height="30" 
                                        Orientation="Horizontal" 
                                        Margin="0, 5, 0, 0">
                                        
                                        <!--open containing folder-->
                                        <Button 
                                            x:Name="OpenContainingFolderButton"
                                            Content="&#xE187;" 
                                            Height="30" 
                                            Width="30" 
                                            ToolTip="Open containing folder." 
                                            Background="#657A68" 
                                            Foreground="#FFFFFF" 
                                            BorderThickness="0" 
                                            FontFamily="Segoe UI Symbol"
                                            Cursor="Hand"/>
                                        
                                        <!--autofocus button-->
                                        <Button 
                                            x:Name="CameraControlsAutofocusButton"
                                            PreviewMouseLeftButtonDown="CameraControlsAutofocusButton_PreviewMouseLeftButtonDown"
                                            PreviewMouseLeftButtonUp="CameraControlsAutofocusButton_PreviewMouseLeftButtonUp"
                                            Height="30" 
                                            Width="55" 
                                            ToolTip="Press and hold to focus camera" 
                                            Background="#005EB8" 
                                            BorderThickness="0" 
                                            Margin="5, 0, 0, 0"
                                            Cursor="Hand">
                                            <Grid>
                                                <Label 
                                                    Content="⛶" 
                                                    FontSize="15" 
                                                    FontFamily="Segoe UI Symbol" 
                                                    VerticalAlignment="Center" 
                                                    Foreground="#FFFFFF" 
                                                    Margin="0, -4, 0, 0"/>
                                                <Label 
                                                    Content="&#xE109;" 
                                                    FontSize="6" 
                                                    FontFamily="Segoe UI Symbol" 
                                                    HorizontalAlignment="Center" 
                                                    Foreground="#FFFFFF" 
                                                    Margin="0, 3, 0, 0"/>
                                            </Grid>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>

                                <!--participant and collection information-->
                                <StackPanel 
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0, 5, 0, 0">

                                    <!--RID information-->
                                    <Label 
                                        Content="RID:" 
                                        HorizontalContentAlignment="Right" 
                                        Foreground="#FFFFFF" 
                                        FontSize="10" 
                                        FontWeight="Bold"/>
                                    <Label 
                                        Content="0000000" 
                                        Width="50" 
                                        HorizontalContentAlignment="Left" 
                                        Foreground="#FFFFFF" 
                                        FontSize="10" />

                                    <!--collection information-->
                                    <Label 
                                        Content="Col:" 
                                        HorizontalContentAlignment="Right" 
                                        Foreground="#FFFFFF" 
                                        FontSize="10" 
                                        FontWeight="Bold"/>
                                    <Label 
                                        Content="Default Profile" 
                                        Width="80" 
                                        HorizontalContentAlignment="Left" 
                                        Foreground="#FFFFFF" 
                                        FontSize="10"/>
                                </StackPanel>
                            </StackPanel>

                            <!--close session button-->
                            <Button 
                                x:Name="CloseSessionButton"
                                Click="CloseSessionButton_Click"
                                Content="&#xE21C;" 
                                Height="30" 
                                Width="30" 
                                ToolTip="Exit Session" 
                                BorderThickness="0" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Right" 
                                Background="#BE3A34" 
                                Foreground="#000000" 
                                FontFamily="Segoe UI Symbol"
                                Cursor="Hand"/>
                        </Grid>

                        <StackPanel
                            Orientation="Horizontal"
                            Height="30"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left">
                            
                            <!--toggle camera button-->
                            <Button 
                                x:Name="ToggleLiveViewHomeButton" 
                                Click="ToggleLiveViewHomeButton_Click" 
                                Visibility="Hidden" 
                                Content="&#xE102;" 
                                ToolTip="Toggle camera on/off." 
                                Height="30" 
                                Width="30" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Background="Transparent" 
                                Foreground="#FFFFFF" 
                                BorderThickness="0" 
                                FontFamily="Segoe UI Symbol"
                                Cursor="Hand"/>

                            <!--autofocus button-->
                            <Button 
                                x:Name="SessionSettingsAutofocusButton"
                                PreviewMouseLeftButtonDown="SessionSettingsAutofocusButton_PreviewMouseLeftButtonDown"
                                PreviewMouseLeftButtonUp="SessionSettingsAutofocusButton_PreviewMouseLeftButtonUp"
                                Visibility="Hidden"
                                Height="30" 
                                Width="30" 
                                Background="Transparent" 
                                ToolTip="Press and hold to focus camera." 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                BorderThickness="0" 
                                FontFamily="Segoe UI Sybol"
                                Cursor="Hand">
                                <Grid>
                                    <Label 
                                        Content="&#9974;" 
                                        FontSize="15" 
                                        FontFamily="Segoe UI Symbol" 
                                        VerticalAlignment="Center" 
                                        Foreground="#FFFFFF" 
                                        Margin="0, -1, 0, 0"/>
                                    <Label 
                                        Content="&#xE109;" 
                                        FontSize="6" 
                                        FontFamily="Segoe UI Symbol" 
                                        HorizontalAlignment="Center" 
                                        Foreground="#FFFFFF" 
                                        Margin="0, 6, 0, 0"/>
                                </Grid>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>

            <!--capture box-->
            <Grid Grid.Column="1" Background="#232323">

                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <!--preview box-->
                <Grid Grid.Row="0" MinWidth="800" HorizontalAlignment="Center">

                    <!--image previews-->
                    <StackPanel 
                        Width="485" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        Orientation="Horizontal">

                        <!--selected image-->
                        <StackPanel Height="530">

                            <!--image-->
                            <Label Content="Selected Image" Height="30" HorizontalAlignment="Center" Foreground="#FFFFFF" FontWeight="Bold"/>
                            <Grid 
                                Height="399" 
                                Width="266">
                                <Border 
                                    BorderThickness="1"
                                    BorderBrush="White"/>
                                <Image x:Name="SelectedImage"/>
                            </Grid>

                            <!--title-->
                            <Label 
                                Height="30" 
                                HorizontalAlignment="Center" 
                                Foreground="#FFFFFF" 
                                FontWeight="Bold"/>

                            <!--description-->
                            <Label 
                                Height="30" 
                                HorizontalContentAlignment="Center" 
                                Foreground="#FFFFFF"/>

                            <!--recapture and autofocus buttons-->
                            <StackPanel Height="30" Width="100" Orientation="Horizontal" Margin="0, 5, 0, 0">
                                <Button 
                                    x:Name="RecaptureButton"
                                    Visibility="Hidden"
                                    Content="&#8630; &#x1f4f7;" 
                                    Height="30" 
                                    Width="65" 
                                    Background="#0D5257" 
                                    ToolTip="Recapture photo. Right click and hold to focus camera." 
                                    Foreground="#FFFFFF" 
                                    BorderThickness="0" 
                                    FontFamily="Segoe UI Symbol" 
                                    Cursor="Hand"/>
                                <Button 
                                    x:Name="RecaptureAutofocusButton"
                                    Visibility="Hidden"
                                    Height="30" 
                                    Width="30" 
                                    Background="#005EB8" 
                                    ToolTip="Press and hold to focus camera." 
                                    Margin="5, 0" 
                                    BorderThickness="0" 
                                    FontFamily="Segoe UI Sybol"
                                    Cursor="Hand">
                                    <Grid>
                                        <Label 
                                            Content="⛶" 
                                            FontSize="15" 
                                            FontFamily="Segoe UI Symbol" 
                                            VerticalAlignment="Center" 
                                            Foreground="#FFFFFF" 
                                            Margin="0, -4, 0, 0"/>
                                        <Label 
                                            Content="&#xE109;" 
                                            FontSize="6" 
                                            FontFamily="Segoe UI Symbol" 
                                            HorizontalAlignment="Center" 
                                            Foreground="#FFFFFF" 
                                            Margin="0, 3, 0, 0"/>
                                    </Grid>
                                </Button>
                            </StackPanel>

                        </StackPanel>

                        <!--next image-->
                        <StackPanel VerticalAlignment="Bottom" Margin="50, 0, 0, 40">

                            <!--image-->
                            <Label 
                                Content="Next Image" 
                                Height="30"
                                HorizontalAlignment="Center" 
                                Foreground="#FFFFFF" 
                                FontWeight="Bold"/>
                            <Grid 
                                Height="246" 
                                Width="164">
                                <Border 
                                    BorderThickness="1"
                                    BorderBrush="White"/>
                                <Image x:Name="NextImage"/>
                            </Grid>

                            <!--title-->
                            <Label 
                                Height="30" 
                                HorizontalAlignment="Center" 
                                Foreground="#FFFFFF" 
                                FontWeight="Bold"/>

                            <!--description-->
                            <Label 
                                Height="30" 
                                HorizontalContentAlignment="Center" 
                                Foreground="#FFFFFF"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!--poses box-->
                <Grid Grid.Row="1" Background="#333F48">
                    <StackPanel>

                        <!--listview-->
                        <Label 
                            Content="Poses" 
                            Height="30" 
                            VerticalAlignment="Top" 
                            HorizontalContentAlignment="Center" 
                            Foreground="#FFFFFF" 
                            FontWeight="Bold" 
                            FontSize="18"/>
                        <ListView 
                            x:Name="PoseListView" 
                            PreviewMouseWheel="PoseListView_PreviewMouseWheel"
                            Height="185" 
                            VerticalAlignment="Bottom"
                            BorderThickness="0" 
                            Background="Transparent">

                            <!--orients the listview horizontally-->
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"></StackPanel>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                        </ListView>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>


        <!--camera screen-->
        <Grid 
            x:Name="CameraScreenGrid" 
            Visibility="Collapsed" 
            Background="#161616"
            Margin="0, 30, 0, 30">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350*" MaxWidth="350"/>
                <ColumnDefinition Width="350*" MinWidth="290"/>
                <ColumnDefinition Width="492*" MinWidth="360"/>
            </Grid.ColumnDefinitions>

            <!--load camera profile-->
            <Grid Grid.Column="0" Background="#550A00">
                <Label 
                    Content="Camera Profiles" 
                    Height="50" VerticalAlignment="Top" 
                    VerticalContentAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Foreground="#FFFFFF" 
                    FontWeight="Bold" 
                    FontSize="15"/>

                <!--listview of camera profiles-->
                <ListView 
                    x:Name="CameraProfileListView" 
                    SelectionChanged="CameraProfileListView_SelectionChanged"
                    MinHeight="615"
                    Background="Transparent" 
                    Foreground="#FFFFFF" 
                    BorderThickness="0" 
                    Margin="0, 50, 0, 75"/>

                <!--delete collection button-->
                <Grid
                    Height="75"
                    VerticalAlignment="Bottom">
                    <Button
                        x:Name="DeleteCameraProfileButton"
                        Click="DeleteCameraProfileButton_Click"
                        Content="Delete Profile"
                        FontWeight="Bold"
                        Height="40"
                        Width="125"
                        Background="#BE3A34"
                        Foreground="#FFFFFF"
                        BorderThickness="0"
                        Cursor="Hand"/>
                </Grid>
            </Grid>

            <!--middle column-->
            <Grid Grid.Column="1" Background="#330600">
                
                <!--row definitions to establish better scaling-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="70*"/>
                    <RowDefinition Height="21*"/>
                </Grid.RowDefinitions>

                <!--camera settings-->
                <Label 
                    Content="Camera Settings" 
                    Height="50" VerticalAlignment="Top" 
                    VerticalContentAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Foreground="#FFFFFF" 
                    FontWeight="Bold" 
                    FontSize="15"/>
                
                <StackPanel 
                    VerticalAlignment="Center"
                    Margin="0, 50, 0, 0">

                    <!--current settings-->
                    <Label 
                        Content="Current Settings"
                        FontWeight="Bold" 
                        HorizontalAlignment="Center"
                        Foreground="#FFFFFF"/>
                    <StackPanel 
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                        <StackPanel>
                            <Label 
                                Content="Aperture: " 
                                HorizontalContentAlignment="Right"
                                Foreground="#FFFFFF"/>
                            <Label 
                                Content="Exposure: " 
                                HorizontalContentAlignment="Right"
                                Foreground="#FFFFFF"/>
                            <Label 
                                Content="ISO: " 
                                HorizontalContentAlignment="Right"
                                Foreground="#FFFFFF"/>
                            <Label 
                                Content="White Balance: " 
                                HorizontalContentAlignment="Right"
                                Foreground="#FFFFFF"/>
                        </StackPanel>
                        <StackPanel Width="90">
                            <Label 
                                x:Name="FStopLabel"
                                Content="N/A"
                                Foreground="#FFFFFF"
                                BorderThickness="0"/>
                            <Label  
                                x:Name="ExposureLabel"
                                Content="N/A"
                                Foreground="#FFFFFF"/>
                            <Label  
                                x:Name="ISOLabel"
                                Content="N/A"
                                Foreground="#FFFFFF"/>
                            <Label  
                                x:Name="WhiteBalanceLabel"
                                Content="N/A"
                                Foreground="#FFFFFF"/>
                        </StackPanel>
                    </StackPanel>

                    <!--adjust settings-->
                    <Label 
                        Content="Adjust Settings"
                        FontWeight="Bold" 
                        HorizontalAlignment="Center"
                        Foreground="#FFFFFF"
                        Margin="0, 30, 0, 0"/>
                    <StackPanel 
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">

                        <!--camera profile settings labels-->
                        <StackPanel>
                            <Label 
                                Content="Aperture/F-Stop" 
                                Height="25"
                                HorizontalContentAlignment="Right"
                                Foreground="#FFFFFF"/>
                            <Label 
                                Content="Exposure/Shutter Speed" 
                                Height="25"
                                HorizontalContentAlignment="Right"
                                Foreground="#FFFFFF"
                                Margin="0, 5, 0, 0"/>
                            <Label 
                                Content="ISO" 
                                Height="25"
                                HorizontalContentAlignment="Right"
                                Foreground="#FFFFFF"
                                Margin="0, 5, 0, 0"/>
                            <Label 
                                Content="White Balance*" 
                                Height="25"
                                HorizontalContentAlignment="Right"
                                Foreground="#FFFFFF"
                                Margin="0, 5, 0, 0"/>
                        </StackPanel>

                        <!--camera profile setting comboboxes-->
                        <StackPanel Width="150">

                            <!--f-stop/aperture-->
                            <ComboBox 
                                x:Name="FStopComboBox"
                                PreviewMouseLeftButtonDown="FStopComboBox_PreviewMouseLeftButtonDown"
                                IsEnabled="False"
                                Height="25"
                                BorderThickness="0"
                                Cursor="Hand"/>

                            <!--exposure-->
                            <ComboBox  
                                x:Name="ExposureComboBox"
                                PreviewMouseLeftButtonDown="ExposureComboBox_PreviewMouseLeftButtonDown"
                                IsEnabled="False"
                                Height="25"
                                BorderThickness="0"
                                Margin="0, 5, 0, 0"
                                Cursor="Hand"/>

                            <!--iso-->
                            <ComboBox  
                                x:Name="ISOComboBox"
                                PreviewMouseLeftButtonDown="ISOComboBox_PreviewMouseLeftButtonDown"
                                IsEnabled="False"
                                Height="25"
                                BorderThickness="0"
                                Margin="0, 5, 0, 0"
                                Cursor="Hand"/>

                            <!--white balance-->
                            <ComboBox  
                                x:Name="WhiteBalanceComboBox"
                                PreviewMouseLeftButtonDown="WhiteBalanceComboBox_PreviewMouseLeftButtonDown"
                                IsEnabled="False"
                                Height="25"
                                BorderThickness="0"
                                Margin="0, 5, 0, 0"
                                Cursor="Hand"/>

                            <Label 
                                Content="*May cause minor errors."
                                Height="25"
                                FontSize="9"
                                HorizontalAlignment="Center"
                                Foreground="#FFFFFF"/>

                            <!--apply changes button-->
                            <Button
                                x:Name="CameraSettings_ApplyChangesButton"
                                Click="CameraSettings_ApplyChangesButton_Click"
                                Content="Apply Changes"
                                IsEnabled="False"
                                Background="#66D6D6"
                                Height="25"
                                Width="100"
                                Margin="0, 5, 0, 10"
                                BorderThickness="0"
                                Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>

                    <!--save camera profile-->
                    <Label 
                        Content="Save Camera Profile*"
                        FontWeight="Bold" 
                        HorizontalAlignment="Center"
                        Foreground="#FFFFFF"
                        Margin="0, 30, 0, 0"/>
                    <!--save profile-->
                    <StackPanel
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                        <Label
                            Content="Profile name"
                            Height="25"
                            HorizontalContentAlignment="Right"
                            Foreground="#FFFFFF"/>
                        <TextBox 
                            x:Name="CameraProfileNameTextBox"
                            PreviewMouseLeftButtonDown="CameraProfileNameTextBox_PreviewMouseLeftButtonDown"
                            Height="25"
                            Width="125"
                            VerticalContentAlignment="Center"
                            BorderThickness="0"/>
                        <Button
                            x:Name="SaveCameraProfileButton"
                            Click="SaveCameraProfileButton_Click"
                            Content="&#128190;"
                            IsEnabled="False"
                            Background="#9ABEAA"
                            Height="25"
                            Width="25"
                            BorderThickness="0"
                            Cursor="Hand"/>
                    </StackPanel>
                    
                    <!--camera must be connected note-->
                    <TextBlock
                        Text="*Note: Each camera profile must have a specific camera associated with it. Therefore, a camera MUST be connected before saving a profile."
                        FontSize="10"
                        Width="150"
                        TextWrapping="Wrap"
                        Foreground="#FFFFFF"
                        HorizontalAlignment="Center"
                        Margin="0, 10, 0, 0"/>
                </StackPanel>
            </Grid>

            <!--live view-->
            <Grid Grid.Column="2">
                <StackPanel 
                    Width="350"
                    VerticalAlignment="Center">
                    <Viewbox Height="525" Width="350" Stretch="Fill">
                        <Grid 
                            x:Name="CameraLiveViewCanvas" 
                            Height="350" 
                            Width="350" 
                            RenderTransformOrigin="0.5,0.5" 
                            Background="#000000">
                            <Grid.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Grid.RenderTransform>
                        </Grid>
                    </Viewbox>

                    <!--autofocus button-->
                    <Button 
                        x:Name="CameraScreenAutofocusButton"
                        PreviewMouseLeftButtonDown="CameraScreenAutofocusButton_PreviewMouseLeftButtonDown"
                        PreviewMouseLeftButtonUp="CameraScreenAutofocusButton_PreviewMouseLeftButtonUp"
                        Visibility="Hidden"
                        Height="30" 
                        Width="30" 
                        Background="#005EB8" 
                        ToolTip="Press and hold to focus camera." 
                        HorizontalAlignment="Left"
                        BorderThickness="0" 
                        FontFamily="Segoe UI Sybol"
                        Cursor="Hand">
                        <Grid>
                            <Label 
                                Content="&#9974;" 
                                FontSize="15" 
                                FontFamily="Segoe UI Symbol" 
                                VerticalAlignment="Center" 
                                Foreground="#FFFFFF" 
                                Margin="0, -4, 0, 0"/>
                            <Label 
                                Content="&#xE109;" 
                                FontSize="6" 
                                FontFamily="Segoe UI Symbol" 
                                HorizontalAlignment="Center" 
                                Foreground="#FFFFFF" 
                                Margin="0, 3, 0, 0"/>
                        </Grid>
                    </Button>

                    <StackPanel>
                        <!--live view settings-->
                        <Label 
                            Content="Live View Settings" 
                            Height="30" VerticalAlignment="Top" 
                            VerticalContentAlignment="Center" 
                            HorizontalAlignment="Center" 
                            Foreground="#FFFFFF" 
                            FontWeight="Bold" 
                            FontSize="15"/>
                        <Label 
                            Content="Reference Frames"
                            FontWeight="Bold" 
                            HorizontalAlignment="Center"
                            Foreground="#FFFFFF" />

                        <StackPanel 
                            HorizontalAlignment="Center"
                            Margin="15, 0, 15, 0">
                            <CheckBox Foreground="#FFFFFF">Closeup Frame</CheckBox>
                            <CheckBox Foreground="#FFFFFF">Enable feature XYZ</CheckBox>
                            <CheckBox Foreground="#FFFFFF">Enable feature WWW</CheckBox>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>


        <!--collections screen-->
        <Grid 
            x:Name="CollectionsScreenGrid" 
            Visibility="Collapsed" 
            Background="#9BD3DD"
            Margin="0, 30, 0, 30">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="842*"/>
            </Grid.ColumnDefinitions>

            <!--collection profiles-->
            <Grid Grid.Column="0" Background="#005EB8">
                <Label 
                    Content="Collection Profiles" 
                    Height="50" VerticalAlignment="Top" 
                    VerticalContentAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Foreground="#FFFFFF" 
                    FontWeight="Bold" 
                    FontSize="15"/>

                <ListView 
                    x:Name="CollectionListView" 
                    SelectionChanged="CollectionListView_SelectionChanged"
                    Background="Transparent" 
                    Foreground="#FFFFFF" 
                    BorderThickness="0" 
                    Margin="0, 50, 0, 75"/>

                <!--delete collection button-->
                <Grid
                    Height="75"
                    VerticalAlignment="Bottom">
                    <Button
                        x:Name="DeleteCollectionButton"
                        Click="DeleteCollectionButton_Click"
                        Content="Delete Collection"
                        FontWeight="Bold"
                        Height="40"
                        Width="125"
                        Background="#BE3A34"
                        Foreground="#FFFFFF"
                        BorderThickness="0"
                        Cursor="Hand"/>
                </Grid>
            </Grid>

            <!--collection settings-->
            <Grid Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
